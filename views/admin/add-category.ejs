<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Add Category</h4>
            <form action="/admin/add-category" method="post">
                
                <div class="form-group">
                    <p class="text-center text-danger"><%=errMsg%></p>
                    <label>Category</label>
                    <input type="text" class="form-control form-control-lg" placeholder="category name"
                        aria-label="Username" name="name" id="category">
                </div>
                <button type="submit"  class="btn btn-primary ml-3 mr-2 col-md-2">Submit</button>
                 
            </form>
        </div>
    </div>
</div>